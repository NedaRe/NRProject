 
<form method="post"action="@Url.Action("Search","Search")">
    <div class="form-group">
       
        <label for="query">Search Key</label>
        @Html.TextArea("query", null,new {@class= "form-control" })
        
        <label for="txtEmail">Email address</label>
        @Html.TextBox("txtEmail",null,new{@class= "form-control",@placeholder= "Enter email" })
        @*<input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
       
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">@ViewBag.Message </label>
    </div>
    <button type="submit" class="btn btn-primary"  >Search</button>
</form>